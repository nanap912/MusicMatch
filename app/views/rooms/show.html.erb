<div class="user-in">
<% @entries.each do |e| %>
    <h3><strong><a href="/users/<%= e.user.id %>"><%= e.user.name%></a></strong></h3>
<% end %>
<h5>DMルーム</h5>
<%= link_to "ユーザー一覧に戻る", users_path ,class:"btn btn-outline-danger btn-sm "%>
</div>

<div class="dmMain">
    <% @messages.each do |m| %>
        <strong><%= m.body %></strong>
        <small class="text-muted"><%= m.user.name %>さん</small><hr>
    <% end %>

    <%= form_for @message do |f| %>
    <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 100 %>
    <%= f.hidden_field :room_id, :value => @room.id %>
    <br>
    <%= f.submit "送信する",class:"btn btn-info btn-sm" %>
    <% end %>
</div>
