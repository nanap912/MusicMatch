
<h3>投稿詳細</h3>
<div class="post">
  <p><%= @post.title %></p>
  <p><%= @post.lyrictitle %></p>
  <p><%= @post.melodytitle %></p>
  <p><%= @post.songtitle %></p>
  <p><%= @post.movietitle %></p>
  <p><%= @post.body %></p>
  <p><%= @post.lyricbody %></p>
  <p><%= audio_tag @post.audio_url, :controls => true if @post.audio? %></p>
  <p><%=  video_tag @post.video_url ,:controls => true if @post.video?%></p>
  <p><%= @post.created_at.to_s(:datetime_jp) %></p>

  <% if user_signed_in? %>
  <% if current_user.already_liked?(@post) %>
      <%= link_to post_like_path(@post), method: :delete do %>
        <i class="far fa-star"></i><%= @post.likes.count %>
      <% end %>
  <% else %>
      <%= link_to post_likes_path(@post), method: :post do %>
        <i class="far fa-star"></i><%= @post.likes.count %>
      <% end %>
  <% end %>
<% else %>
    <i class="far fa-star"></i><%= @post.likes.count %>
<% end %>
</div>
<%= link_to "編集する", edit_post_path(@post.id) %>
<%= link_to "投稿一覧に戻る", posts_path %>

<footer>
  <small>© 2020 石田七海</small>
</footer>