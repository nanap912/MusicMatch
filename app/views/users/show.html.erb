<h1>マイページ</h1>

<p>名前：<%= @user.name %></p>
<p>プロフィール画像:<%= image_tag @user.image_url, size: "250x200" if @user.image? %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<div class="user-in">
    <% if @user.id == current_user.id %>
        <%= @msg %>
    <% else %>
        <% if @isRoom == true %>
            <p><%= link_to 'DMへ', room_path(@roomId) %></p>
        <% else %>
            <%= form_for @room do |f| %>
                <%= fields_for @entry do |e|%>
                    <% e.hidden_field :user_id, value: @user.id %>
                <% end %>
            <%= f.submit "DMを開始する"%>
            <% end %>
        <% end %>
    <% end %>
</div>
<%= link_to "ユーザー一覧に戻る", users_path %>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
  <%= link_to "投稿一覧に戻る", posts_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.posts.each do |t| %>
  <%= t.title %><%= t.lyrictitle%><%= t.melodytitle%><%= t.songtitle%><%= t.movietitle%><br>
  <%= t.body %><%= t.lyricbody %><br>
  <%=  video_tag t.video_url ,:controls => true if t.video?%><br>
  <%= audio_tag t.audio_url, :controls => true if t.audio? %><br>
  <%= t.created_at.to_s(:datetime_jp) %><br>
<% end %>

<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_posts.each do |t| %>
    <%= t.user.name %><br>
    <%= t.title %><br>
    <%= t.body %><br>
    <%= t.created_at.to_s(:datetime_jp) %><br>
<% end %>
